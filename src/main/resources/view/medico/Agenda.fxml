<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="461.0" prefWidth="611.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.AgendaController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gerenciamento de Agenda " />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Início:" />
        <TextField fx:id="txtInicio" prefWidth="70" promptText="08:00" />

        <Label text="Fim:" />
        <TextField fx:id="txtFim" prefWidth="70" promptText="18:00" />

        <Label text="Duração (min):" />
        <TextField fx:id="txtDuracao" prefWidth="50" promptText="30" />
      <Button alignment="BOTTOM_LEFT" nodeOrientation="RIGHT_TO_LEFT" onAction="#salvarHorarios" prefHeight="3.0" prefWidth="98.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5px;" text="Salvar horários" textAlignment="CENTER" />
    </HBox>

    <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="121.0" spacing="10">
        <CheckBox fx:id="chkSegunda" text="Seg" />
        <CheckBox fx:id="chkTerca" text="Ter" />
        <CheckBox fx:id="chkQuarta" text="Qua" />
        <CheckBox fx:id="chkQuinta" text="Qui" />
        <CheckBox fx:id="chkSexta" text="Sex" />
    </HBox>

    <Button onAction="#gerarAgenda" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Ver agenda" />

    <TableView fx:id="tabelaAgenda" onMouseClicked="#alterarStatus" prefHeight="283.0" prefWidth="356.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colData" prefWidth="195.0" text="Data" />
            <TableColumn fx:id="colHora" prefWidth="143.0" text="Horário" />
            <TableColumn fx:id="colPaciente" prefWidth="232.0" text="Paciente" />
        </columns>
    </TableView>

</VBox>
