<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="800" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.HistoricoClinicoController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Prontuário e Histórico Clínico" />

    <!-- Seleção do paciente -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Paciente:" />
        <ComboBox fx:id="cmbPacientes" onAction="#pacienteSelecionado" prefWidth="300" />
      <Button fx:id="btnEdit" mnemonicParsing="false" text="Editar Descrição" />
    </HBox>

    <!-- Histórico clínico -->
    <TableView fx:id="tabelaHistorico" prefHeight="250">

        <columns>
            <TableColumn fx:id="colData" prefWidth="120" text="Data" />
            <TableColumn fx:id="colDescricao" prefWidth="450" text="Descrição / Evolução" />
            <TableColumn fx:id="colMedico" prefWidth="200" text="Médico" />
        </columns>

    </TableView>

    <!-- Status de internação -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-border-color: gray; -fx-padding: 10;">

        <Label style="-fx-font-weight: bold;" text="Status de Internação:" />

        <RadioButton fx:id="rbApto" text="Apto para visitas" />
        <RadioButton fx:id="rbNaoApto" text="Não apto para visitas" />

    </HBox>

    <!-- Ações -->
    <HBox alignment="CENTER_RIGHT" spacing="15">
        <Button fx:id="btnSalvar" text="Salvar Alterações" />
    </HBox>

</VBox>
