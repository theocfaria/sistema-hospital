<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="800" spacing="12" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.AssiduidadeController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Monitoramento de Assiduidade" />
   <HBox prefHeight="100.0" prefWidth="200.0" />

    <TableView fx:id="tabelaConsultas" onMouseClicked="#alterarStatus" prefHeight="350">

        <columns>
            <TableColumn fx:id="colPaciente" prefWidth="180" text="Paciente" />
            <TableColumn fx:id="colData" prefWidth="120" text="Data" />
            <TableColumn fx:id="colHorario" prefWidth="100" text="Horário" />
            <TableColumn fx:id="colMedico" prefWidth="209.0" text="Médico" />
            <TableColumn fx:id="colStatus" prefWidth="160.0" text="Status" />
        </columns>

    </TableView>
</VBox>
