<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.VerificarVisitasController">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Disponibilidade de Visitas">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label text="Busque pelo paciente para verificar se a visitação está liberada ou restrita." textFill="#616161" />
         </children>
      </VBox>

      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
         <children>
            <Label text="Paciente:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="patientTextField" onAction="#pesquisaPaciente" prefHeight="30.0" prefWidth="300.0" promptText="Digite o nome do paciente..." />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>

      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="visitasTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colNome" prefWidth="180.0" text="Nome do Paciente" />
                <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status da Visita" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>

      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#pesquisaPaciente" prefHeight="30.0" prefWidth="160.0" style="-fx-background-color: #2196F3;" text="Buscar Status" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
