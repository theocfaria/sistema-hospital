<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="500.0" spacing="15.0" style="-fx-border-style: solid; -fx-border-color: gray; -fx-border-width: 2px; -fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.MonitoraFaltasController">
    <children>
        <Label text="Monitoramento de Faltas">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>

        <Label text="Abaixo estão listadas as consultas onde o paciente não compareceu." textFill="#616161" />

        <TableView fx:id="tableFaltas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPaciente" prefWidth="180.0" text="Paciente" />
                <TableColumn fx:id="colMedico" prefWidth="150.0" text="Médico" />
                <TableColumn fx:id="colData" prefWidth="120.0" text="Dia da Consulta" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>