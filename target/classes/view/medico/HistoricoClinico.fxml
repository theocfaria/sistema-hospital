<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="604.0" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.HistoricoClinicoController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Prontuário e Histórico Clínico" />

    <!-- Seleção do paciente -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Paciente:" />
        <ComboBox fx:id="cmbPacientes" onAction="#pacienteSelecionado" prefWidth="300" />
      <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#editarDescricao" text="Editar Dados" />
    </HBox>

    <!-- Histórico clínico -->
    <TableView fx:id="tabelaHistorico" prefHeight="250" prefWidth="567.0">

        <columns>
            <TableColumn fx:id="colData" prefWidth="88.0" text="Data" />
            <TableColumn fx:id="colDescricao" prefWidth="394.0" text="Descrição / Evolução" />
            <TableColumn fx:id="colMedico" prefWidth="91.0" text="Médico" />
        </columns>

    </TableView>

    <!-- Evolução clínica -->
    <VBox spacing="5">
        <Label style="-fx-font-weight: bold;" text="Descrição / Evolução Clínica:" />
      <TextArea fx:id="txtEvolucao" prefHeight="200.0" prefWidth="200.0" />
    </VBox>


    <!-- Status de internação -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-border-color: gray; -fx-padding: 10;">

        <Label style="-fx-font-weight: bold;" text="Status de Internação:" />

        <RadioButton fx:id="rbApto" text="Apto para visitas">
         <toggleGroup>
            <ToggleGroup fx:id="grupoInternacao" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="rbNaoApto" text="Não apto para visitas" toggleGroup="$grupoInternacao" />
      <RadioButton fx:id="rbNaoInternado" mnemonicParsing="false" text="Não está internado" toggleGroup="$grupoInternacao" />

    </HBox>

    <!-- Ações -->
    <HBox alignment="CENTER_RIGHT" spacing="15">
        <Button fx:id="btnSalvar" onAction="#salvarDescricao" text="Salvar Alterações" />
    </HBox>

</VBox>
