<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufjf.controller.AcessarDocumentosController">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Meus Documentos Médicos">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label text="Acesse seus resultados de exames e atestados médicos emitidos." textFill="#616161" />
         </children>
      </VBox>

      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
         <children>
            <Label text="Filtrar por Tipo:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="filtroTipoDocumento" prefHeight="30.0" prefWidth="200.0" promptText="Todos os documentos" />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>

      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="documentosTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colData" prefWidth="100.0" text="Data de Emissão" />
                <TableColumn fx:id="colTipo" prefWidth="120.0" text="Tipo" />
                <TableColumn fx:id="colMedico" prefWidth="150.0" text="Médico/Responsável" />
                <TableColumn fx:id="colDescricao" prefWidth="250.0" text="Descrição" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>

      <HBox alignment="CENTER_RIGHT" spacing="15.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
